
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
  <div class="left">
    <div class="container-child col-md-2 col-md-offset-1 col-sm-4 col-xs-6 ">
  <%= link_to profile_img(user),user_path(user) %></br>
  <%= link_to user.email,user_path(user) %></br>
  <% if user.id != current_user.id %>
    <div class="item">
      <%= link_to user.name,user %>
      <%= link_to 'メッセージ',conversations_path(sender_id: current_user.id,recipient_id: user.id),method:'post'%>
    </div>
    <%= render partial:'follow_form',locals:{user: user} if signed_in? %>
  <% end %>
</div>
  <% end %>
